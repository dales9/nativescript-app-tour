    </FlexboxLayout>
    <FlexboxLayout flexDirection="column" flexGrow="1"  flexShrink="0" alignItems="center" justifyContent="center">
      <Button id="feat3" text="Feature 3" padding="20"></Button>
      <Button text="start" tap="{{ startTour }}"></Button>
    </FlexboxLayout>
    <FlexboxLayout padding="20" flexShrink="0" alignItems="stretch" justifyContent="space-between">
      <Label id="feat1" text="Feature 1" padding="20"></Label>
